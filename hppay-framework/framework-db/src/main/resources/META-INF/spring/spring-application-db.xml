<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 定义默认的DOA bean name生成器 -->
    <bean id="defaultMapperBeanNameGenerator" class="com.hstypay.framework.db.support.MapperBeanNameGenerator"/>

    <!-- 定义只读的DOA bean name生成器 -->
    <bean id="rdOnlyMapperBeanNameGenerator" class="com.hstypay.framework.db.support.MapperBeanNameGenerator">
        <property name="prefix" value="rdOnly"/>
    </bean>
</beans>